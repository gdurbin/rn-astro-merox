---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { SOCIAL_LINKS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
---

<Layout class="max-w-3xl">
	<PageHead slot="head" title="Gamedev" />

	<Breadcrumbs items={[{ label: 'Gamedev', icon: 'lucide:gamepad' }]} />

	<section class="flex flex-col gap-8">
		<!-- Header -->
		<div class="flex flex-col gap-4">
			<div>
				<h1 class="text-3xl font-bold md:text-4xl">Gamedev</h1>
				<p class="text-muted-foreground mt-1 font-mono text-sm">
					Learn more about my game development journey and creations
				</p>
			</div>
		</div>

		<!-- Subtle Separator -->
		<div class="bg-border/30 h-px" aria-hidden="true"></div>

		<!-- Main Content -->
	</section>

	<!-- Plugin Content -->
	<section class="flex flex-col gap-8">
		<!-- Header -->
		<div class="flex flex-col gap-4">
			<div>
				<h2 class="text-2xl font-bold md:text-3xl">Plugins</h2>
				<p class="text-muted-foreground mt-1 font-mono text-sm">
					Unreal Engine 5 plugins I've developed
				</p>
			</div>
		</div>

		<!-- Main Content -->
		<div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
			<h2 class="text-xl font-bold md:text-2xl">RGameAnim</h2>
			<p class="text-muted-foreground leading-relaxed">
				Gameplay Animation Sample Project for Epic Games turned into a plugin.
			</p>
		</div>

		<div>
			{
				SOCIAL_LINKS.find((link) => link.label === 'Email') && (
					<Link
						href="https://docs.radiantnerd.com/rgameanim/download"
						class="group bg-foreground text-background hover:bg-foreground/90 focus-visible:ring-ring inline-flex items-center gap-2.5 rounded-lg px-7 py-3.5 text-base font-medium transition-all duration-200 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-none"
					>
						<Icon name="lucide:download" class="size-4" />
						<span>Get RGameAnim</span>
						<Icon
							name="lucide:arrow-right"
							class="size-4 transition-transform group-hover:translate-x-1"
						/>
					</Link>
				)
			}
		</div>
	</section>
</Layout>
