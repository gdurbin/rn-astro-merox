---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { Button } from '@/components/ui/button.tsx'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'

// Person Schema for Gamedev page
const personSchema = {
	'@context': 'https://schema.org',
	'@type': 'Person',
	name: SITE.title,
	url: SITE.href,
	description: SITE.description,
}
---

<Layout class="max-w-3xl">
	<PageHead slot="head" title="Gamedev" />

	<!-- Person Schema for Gamedev page SEO -->
	<script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

	<Breadcrumbs items={[{ label: 'Gamedev', icon: 'lucide:gamepad' }]} />

	<section class="flex flex-col gap-8">
		<!-- Header -->
		<div class="flex flex-col gap-4">
			<div>
				<h1 class="text-3xl font-bold md:text-4xl">Gamedev</h1>
				<p class="text-muted-foreground mt-1 font-mono text-sm">
					Learn more about my game development journey and creations
				</p>
			</div>
		</div>

		<!-- Main Content -->
	</section>

	<!-- Plugin Content -->
	<section class="flex flex-col gap-8">
		<!-- Header -->
		<div class="flex flex-col gap-4">
			<div>
				<h2 class="text-2xl font-bold md:text-3xl">Plugins</h2>
				<p class="text-muted-foreground mt-1 font-mono text-sm">
					Unreal Engine 5 plugins I've developed
				</p>
			</div>
		</div>

		<!-- Main Content -->
		<div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
			<h2 class="text-xl font-bold md:text-2xl">RGameAnim</h2>
			<p class="text-muted-foreground leading-relaxed">
				Gameplay Animation Sample Project for Epic Games turned into a plugin.
			</p>
		</div>
		<Button className="w-fit">
			<Link href="https://docs.radiantnerd.com/rgameanim">Get RGameAnim</Link>
		</Button>
	</section>
</Layout>
