---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'

// Person Schema for About page
const personSchema = {
	'@context': 'https://schema.org',
	'@type': 'Person',
	name: SITE.title,
	url: SITE.href,
	description: SITE.description,
}
---

<Layout class="max-w-3xl">
	<PageHead slot="head" title="About" />

	<!-- Person Schema for About page SEO -->
	<script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

	<Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

	<section class="flex flex-col gap-8">
		<!-- Header -->
		<div class="flex flex-col gap-4">
			<div>
				<h1 class="text-3xl font-bold md:text-4xl">About</h1>
				<p class="text-muted-foreground mt-1 font-mono text-sm">
					Learn more about this blog
				</p>
			</div>
		</div>

		<!-- Subtle Separator -->
		<div class="bg-border/30 h-px" aria-hidden="true"></div>

		<!-- Main Content -->
		<div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
			<p class="text-muted-foreground leading-relaxed">
				Welcome to <strong class="text-primary">{SITE.title}</strong>! This will
				be a multimedia site for news about my gamedev journey and everything
				else in life that I think is cool and interesting.
			</p>
			<p class="text-muted-foreground leading-relaxed">
				My name is Gerrett. I'm learning game development with the hope of
				someday releasing my own indie videogame. I will try to share a lot of
				what I learn and create on RadiantNerd.
			</p>
		</div>
	</section>
</Layout>
